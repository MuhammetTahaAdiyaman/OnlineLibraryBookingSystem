@model List<Kiralama>

@if(TempData["Basarili"] != null)
{
    <h4 style="color:red">@TempData["Basarili"]</h4>
}

<div class="container">

<div class="row pt-3 pb-4">
        <div>
            <h1>Kiralamalar</h1>
        </div>
</div>
    <table class="table table-bordered">
    <thead>

    
    <tr>
        <th>Id</th>
        <th>OgrenciId</th>
        <th>KitapId</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var kiralama in Model)
        {
            <tr>
                <td>@kiralama.Id</td>
                <td>@kiralama.OgrenciId</td>
                <td>@kiralama.Kitap.KitapAdi</td>
                <td></td>

                <td><a asp-controller="Kiralama" asp-action="EkleGuncelle" asp-route-id="@kiralama.Id" class="btn btn-warning" type="button" style="width:250px">Güncelle</a></td>
                    <td><a asp-controller="Kiralama" asp-action="Sil" asp-route-id="@kiralama.Id" class="btn btn-danger" type="button" style="width:250px">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="Kiralama" asp-action="EkleGuncelle" class="btn btn-lg btn-primary" type="button">Yeni Kiralama Oluştur</a>
    </div>
</div>

</div>